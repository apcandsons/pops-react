{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ES5",
        "types": ["vitest/globals"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
